<h1><%= @user.username %>'s Profile</h1>

<h2>Created Events</h2>
<ul class="created-events">
  <% @events.each do |event| %>
    <li class="created-event">
      <%= link_to event.name, event, class: 'created-title' %>
    </li>
  <% end %>
</ul>

<h2>Attended Events</h2>

<div class="attended-events">
  <h3>Past Events</h3>
  <ul class="past-events">
    <% @user.attended_events.where('date < ?', Date.today).order(date: :desc).each do |event| %>
      <li class="attended-event">
        <%= link_to event.name, event, class: 'attended-title' %>
      </li>
    <% end %>
  </ul>

  <h3>Future Events</h3>
  <ul class="future-events">
    <% @user.attended_events.where('date >= ?', Date.today).order(date: :asc).each do |event| %>
      <li class="attended-event">
        <%= link_to event.name, event, class: 'attended-title' %>
      </li>
    <% end %>
  </ul>
</div>